<h2 class="page-header">注文情報確認</h2>
<div calss="row">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <!--%= attachment_image_tag( cart_item(cart_item.id).image_id, :image, size: "60x50", fallback: "no_image.jpg") %-->
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= tax_price(cart_item.item_id).to_s(:delimited) %>
              </td>
              <td>
                  <%= cart_item.quantity %>
              </td>
              <td>
                <%= sub_price(cart_item.id).to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div>
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= cart_items_total_price(1).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td>¥<%= billing(1,@ordr.id).to_s(:delimited) %></td>
          </tr>
      </table>
    </div>
    <div>
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th>支払方法</th>
          <td>
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td>
            <!--%= "#{@order.postcode} #{@order.address} 　#{@order.name}" %-->
          </td>
        </tr>
      </table>

<%
=begin
 %>
      <!-- 表示とformを分けて記入 -->
      <div class ="col-xs-11">
      <%= form_with model: @order, url: customers_orders_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :total_price %>
        <%= f.hidden_field :ship, value: @ship %>
        <%= link_to "注文情報入力へ戻る", new_customers_order_path, data: {"turbolinks" => false}, class: "btn btn-info col-xs-3 back" %>
        　　<i class="fas fa-shipping-fast fa-2x"></i>
        <%= f.submit "購入を確定する", class: "btn btn-warning center-block col-xs-5" %>
      <% end %>
      </div>
<%
=end
%>

</div>